{
	"name": "inventory-application",
	"description": "An Odin Project assignment to practice Node.js, Express, and Postgresql",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run build:css\" \"tsx --watch src/index.ts\"",
		"dev:server": "tsx --watch src/index.ts",
		"build:css": "postcss ./src/public/styles/styles.css -o ./src/public/styles/build.css --watch",
		"build:css:once": "postcss ./src/public/styles/styles.css -o ./src/public/styles/build.css",
		"build": "tsc && npm run build:css:once && cp -r src/views dist/src/views && cp -r src/public dist/src/public",
		"start": "node dist/src/index.js",
		"init:db": "npx tsx src/db/init.ts",
		"seed": "npx tsx src/db/seed.ts"
	},
	"keywords": [],
	"author": "James Chen",
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^17.1.0",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-ejs-layouts": "^2.5.1",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"method-override": "^3.0.0",
		"morgan": "^1.10.0",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.11",
		"@tsconfig/node22": "^22.0.2",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/method-override": "^3.0.0",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.0.12",
		"@types/pg": "^8.15.4",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	}
}
