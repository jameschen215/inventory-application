<div class="w-full max-w-md mx-auto p-6 rounded-lg shadow-md bg-white">
  <%- include('partials/title') %>

  <form action="/admin" method="post" class="flex flex-col gap-5">
    <div class="flex flex-col">
      <label for="password" class="uppercase text-sm text-zinc-600 font-light mb-1">
        Password
        <span class="text-red-500">*</span>
      </label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= locals.data?.password || ''%>"
        required
        autofocus
        autocomplete="current-password"
        aria-describedby="password-help"
        class="border border-zinc-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-200 outline-none px-3 py-2 rounded-md transition-colors"
      />

      <% if (locals.error) { %>
      <p id="password-help" class="text-sm text-red-500 mt-1" role="alert"><%= error %></p>
      <% } else { %>
      <p id="password-help" class="text-sm text-zinc-500 mt-1">
        Enter the admin password to access editing and deletion features.
      </p>
      <% } %>

      <!-- Only include redirect if it exists and is not empty -->
      <% if (locals.redirect && locals.redirect.trim()) { %>
      <input type="hidden" name="redirect" value="<%= redirect %>" />
      <% } %>
    </div>

    <div class="flex gap-3">
      <button
        type="submit"
        class="flex-1 bg-blue-500 hover:bg-blue-600 focus:bg-blue-600 focus:ring-2 focus:ring-blue-300 cursor-pointer py-2 px-4 rounded-md border-none text-white font-medium transition-colors"
      >
        Submit
      </button>
    </div>
  </form>
</div>
