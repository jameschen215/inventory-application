<%- include('partials/header') %>

<!-- define form action and method -->

<div class="w-full max-w-md mx-auto p-6 rounded-lg shadow-md bg-white">
	<%- include('partials/title') %>

	<form action="/admin" method="post" class="flex flex-col gap-5">
		<div class="flex flex-col">
			<label
				for="password"
				class="uppercase text-sm text-zinc-600 font-light mb-1"
				>Password *</label
			>
			<input
				type="text"
				id="password"
				name="password"
				value="<%= locals.data?.password ?? ''%>"
				required
				autofocus
				class="border border-zinc-300 outline-none px-3 py-2 rounded-md" />
			<% if (locals.error) { %>
			<p class="text-sm text-red-500 mt-1"><%= error %></p>
			<% } else { %>
			<p class="text-sm text-blue-500 mt-1">
				You must enter correct admin password for editing or deleting.
			</p>
			<% } %>
			<input type="hidden" name="redirect" value="<%= redirect %>" />
		</div>

		<div class="flex gap-5">
			<button
				id="form-cancel-btn"
				type="button"
				class="w-full bg-blue-500 cursor-pointer py-1 px-2 rounded-md border-none text-zinc-50">
				Cancel
			</button>

			<button
				type="submit"
				class="w-full bg-blue-500 cursor-pointer py-2 px-2 rounded-md border-none text-zinc-50">
				Submit
			</button>
		</div>
	</form>
</div>
