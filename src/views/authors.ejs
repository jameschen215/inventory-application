<div class="flex-1 w-full max-w-2xl mx-auto flex flex-col md:p-4">
  <!-- Content -->
  <div class="flex-1 w-full bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Header -->
    <div class="bg-zinc-50 border-b border-zinc-200 px-6 py-4">
      <%- include('partials/title') %>
      <div class="flex items-center mt-2">
        <p class="text-sm text-zinc-600">
          <% if (locals.authors && locals.authors.length > 0) { %> Showing
          <%= authors.length %>
          author<%=
          authors.length === 1 ? '' : 's' %>
          <% } else { %>
          No authors found
          <% } %>
        </p>
      </div>
    </div>

    <!-- Authors List -->
    <% if (locals.authors && locals.authors.length > 0) { %>
    <div class="divide-y divide-zinc-200">
      <% authors.forEach((author, index) => { %>
      <div class="group hover:bg-zinc-50 transition-colors">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Author Info -->
            <div class="flex-1 min-w-0">
              <h3
                class="text-lg font-medium text-zinc-900 group-hover:text-blue-500 transition-colors"
              >
                <a
                  href="/authors/<%= author.id %>"
                  class="block hover:no-underline focus:outline-none focus:ring-2 focus:ring-blue-300 rounded"
                >
                  <%= author.name %>
                </a>
              </h3>

              <div
                class="mt-1 flex flex-wrap items-center gap-4 text-sm text-zinc-600"
              >
                <% if (author.nationality) { %>
                <span class="flex items-center gap-1">
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    ></path>
                  </svg>
                  <%= author.nationality %>
                </span>
                <% } %>
                <% if (author.gender) { %>
                <span class="capitalize"><%= author.gender %></span>
                <% } %>
                <% if (author.dob) { %>
                <span
                  >Born
                  <%= new Date(author.dob).getFullYear() %></span
                >
                <% } %>
              </div>

              <% if (author.bio) { %>
              <p
                class="mt-2 text-sm text-zinc-700 line-clamp-2 leading-relaxed"
              >
                <%= author.bio.length > 150 ? author.bio.substring(0, 150) +
                '...' : author.bio %>
              </p>
              <% } %>
            </div>

            <!-- Action Buttons -->
            <div
              class="hidden ml-4 md:flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity"
            >
              <a
                href="/authors/<%= author.id %>/books"
                title="View Books"
                class="p-1.5 text-zinc-400 hover:text-blue-500 hover:bg-blue-50 rounded transition-colors"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </a>

              <a
                href="/authors/<%= author.id %>/edit"
                title="Edit Author"
                class="p-1.5 text-zinc-400 hover:text-blue-500 hover:bg-blue-50 rounded transition-colors"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <!-- Empty State -->
    <div class="flex flex-col items-center justify-center py-12">
      <div class="text-center flex flex-col items-center gap-4">
        <div class="size-12 text-zinc-300">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-users-icon lucide-users w-full h-full"
          >
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
            <path d="M16 3.128a4 4 0 0 1 0 7.744" />
            <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
            <circle cx="9" cy="7" r="4" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-zinc-900 mb-1">No Authors Found</h3>
        <p class="text-zinc-600 mb-6 max-w-sm">
          Get started by adding books with author(s) to help organize your
          library.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="/books/create?from=<%= encodeURIComponent(locals.currentPath) || '/'%>"
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-300 transition-colors text-sm font-medium"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
              ></path>
            </svg>
            Add New Book
          </a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
