<div class="flex-1 w-full max-w-lg mx-auto flex justify-center items-center">
	<div
		class="flex flex-col items-center bg-white p-6 md:p-10 shadow-md rounded-lg">
		<h1 class="text-3xl font-semibold">Confirm Deletion</h1>
		<p class="text-lg mt-8">
			Are you sure you want to permanently delete
			<span class="italic font-semibold"><%= locals.data?.name %>?</span>
		</p>
		<p class="mt-2 text-lg w-full">This action is irreversible!</p>

		<form
			action="<%= currentPath.split('/').slice(0,-1).join('/') %>/?_method=DELETE"
			method="post"
			class="mt-20 w-full flex justify-between gap-5">
			<input type="hidden" name="returnTo" value="<%= returnPath %>" />
			<a
				href="<%= cancelPath %>"
				class="cursor-pointer border border-blue-500 px-6 py-1 rounded-sm text-blue-500 flex items-center justify-center hover:bg-blue-500 hover:text-zinc-50 transition-colors duration-200">
				Cancel
			</a>

			<button
				type="submit"
				class="cursor-pointer text-blue-500 border border-blue-500 px-6 py-1 rounded-sm hover:bg-blue-500 hover:text-zinc-50 transition-colors duration-200">
				Confirm
			</button>
		</form>
	</div>
</div>
