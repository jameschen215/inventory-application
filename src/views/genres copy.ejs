<div class="flex-1 w-full max-w-lg mx-auto flex flex-col">
	<!-- Search -->
	<%- include('partials/search') %>

	<!-- Page content -->
	<div class="flex-1 bg-white p-6 rounded-md shadow-md">
		<!-- Title -->
		<%- include('partials/title') %>

		<!-- Content -->
		<% if (locals.genres.length > 0) { %>
		<ul class="flex flex-wrap gap-6 md:mt-8">
			<% genres.map(genre => { %>
			<li
				class="w-[calc(50%-12px)] h-24 flex items-center justify-center rounded-md text-base shadow-sm border border-zinc-200">
				<a
					href="/genres/<%= genre.id %>"
					class="w-full h-full flex items-center justify-center">
					<span><%= genre.name %></span>
				</a>
			</li>
			<%})%>
		</ul>
		<% } else { %>
		<p class="text-center">No genres.</p>
		<% } %>
	</div>
</div>
