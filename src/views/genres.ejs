<div class="flex-1 w-full max-w-2xl mx-auto flex flex-col md:p-4">
  <!-- Search -->
  <%- include('partials/search') %>

  <!-- Content -->
  <div class="flex-1 w-full bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Header -->
    <div class="bg-zinc-50 border-b border-zinc-200 px-6 py-4">
      <%- include('partials/title') %>

      <div class="flex justify-between items-center mt-2">
        <p class="text-sm text-zinc-600">
          <% if (locals.genres && locals.genres.length > 0) { %> Showing <%= genres.length %> genre<%= genres.length ===
          1 ? '' : 's' %> <% } else { %> No genres found <% } %>
        </p>
      </div>
    </div>

    <!-- Genres List -->
    <% if (locals.genres && locals.genres.length > 0) { %>
    <div class="divide-y divide-zinc-200">
      <% genres.forEach((genre, index) => { %>
      <div class="group hover:bg-zinc-50 transition-colors">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Genre Info -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-3">
                <!-- Genre Color Indicator (if you have color field) -->
                <div class="flex-1">
                  <h3 class="text-lg font-medium text-zinc-900 group-hover:text-blue-500 transition-colors">
                    <%= genre.name %>
                  </h3>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center gap-1 md:opacity-0 group-hover:opacity-100 transition-opacity">
              <!-- View Books -->
              <a href="/genres/<%= genre.id %>/books" title="View books in this genre" class="p-2 text-zinc-400 hover:text-blue-500 hover:bg-blue-50 rounded-md transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <span class="sr-only">View books in <%= genre.name %></span>
              </a>

              <!-- Edit Genre -->
              <a href="/genres/<%= genre.id %>/edit" title="Edit genre" class="p-2 text-zinc-400 hover:text-blue-500 hover:bg-blue-50 rounded-md transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                <span class="sr-only">Edit <%= genre.name %></span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <% } else { %>
    <!-- Empty State -->
    <div class="flex flex-col items-center justify-center py-12">
      <div class="text-center flex flex-col items-center gap-4">
        <div class="size-16 text-zinc-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width=".5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shapes-icon lucide-shapes w-full h-full">
            <path d="M8.3 10a.7.7 0 0 1-.626-1.079L11.4 3a.7.7 0 0 1 1.198-.043L16.3 8.9a.7.7 0 0 1-.572 1.1Z" />
            <rect x="3" y="14" width="7" height="7" rx="1" />
            <circle cx="17.5" cy="17.5" r="3.5" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-zinc-900 mb-1">No Genres Found</h3>
        <p class="text-zinc-600 mb-6 max-w-sm">
          Get started by creating books with genres to help organize your library.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a href="/books/create?from=<%= encodeURIComponent(locals.currentPath) || '/'%>" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-300 transition-colors text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Create New Book
          </a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>