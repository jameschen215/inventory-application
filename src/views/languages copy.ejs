<div class="flex-1 w-full max-w-lg mx-auto flex flex-col">
	<!-- Search -->
	<%- include('partials/search') %>

	<!-- Page content -->
	<div class="flex-1 bg-white p-6 rounded-md shadow-md">
		<!-- Title -->
		<%- include('partials/title') %>

		<!-- Content list -->
		<% if (locals.languages.length > 0) { %>
		<ul class="flex flex-wrap gap-6 justify-between md:mt-8">
			<% languages.map(language => { %>
			<li
				class="w-[calc(50%-12px)] h-24 bg-white flex items-center justify-center rounded-md text-xl shadow-sm border border-zinc-200">
				<a
					href="/languages/<%= language.id %>"
					class="flex items-center justify-center w-full h-full">
					<span><%= language.name %></span>
				</a>
			</li>
			<%})%>
		</ul>
		<% } else { %>
		<p class="text-center">No languages.</p>
		<% } %>
	</div>
</div>
