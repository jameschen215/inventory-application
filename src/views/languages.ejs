<div class="flex-1 w-full max-w-xl mx-auto flex flex-col">
	<!-- Search -->
	<%- include('partials/search') %>

	<!-- Content -->
	<div class="flex-1 w-full max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
		<!-- Title -->
		<%- include('partials/title') %>

		<!-- Content -->
		<% if (locals.languages.length > 0) { %> <% languages.map(language => { %>
		<div class="flex items-center gap-6 py-4 not-last:border-b border-zinc-200">
			<div class="justify-self-start block"><%= language.name %></div>

			<div class="ml-auto flex gap-8">
				<a
					href="/languages/<%= language.id %>/books"
					class="text-blue-500 font-light md:flex md:gap-1">
					<div
						aria-hidden="true"
						class="size-6 border-b border-transparent hover:border-blue-500 transition-colors duration-200">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-library-icon lucide-library">
							<path d="m16 6 4 14" />
							<path d="M12 6v14" />
							<path d="M8 8v12" />
							<path d="M4 4v16" />
						</svg>
					</div>
					<span class="sr-only">Books</span></a
				>
				<a
					href="/languages/<%= language.id %>/edit"
					class="text-blue-500 font-light inline-block md:flex md:gap-1">
					<span
						aria-hidden="true"
						class="size-6 border-b border-transparent hover:border-blue-500 transition-colors duration-200">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="1.5"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-square-pen-icon lucide-square-pen w-full h-full">
							<path
								d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
							<path
								d="M18.375 2.625a1 1 0 0 1 3 3l-9.013 9.014a2 2 0 0 1-.853.505l-2.873.84a.5.5 0 0 1-.62-.62l.84-2.873a2 2 0 0 1 .506-.852z" />
						</svg>
					</span>
					<span class="sr-only">Edit</span>
				</a>
			</div>
		</div>

		<% }) %>
	</div>
	<% } else { %>
	<p class="text-center">No Languages.</p>
	<% } %>
</div>
