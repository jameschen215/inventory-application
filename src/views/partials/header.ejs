<header
	class="flex flex-col gap-2 px-6 border-b border-zinc-200 fixed top-0 left-0 md:left-16 lg:left-64 w-full md:w-[calc(100%-64px)] lg:w-[calc(100%-256px)] bg-white/50 backdrop-blur-sm z-50"
	role="banner">
	<div class="flex items-center justify-between h-16">
		<!-- Mobile menu toggle button -->
		<button
			id="btn-menu"
			class="size-6 cursor-pointer text-zinc-950 md:hidden"
			aria-label="Toggle navigation menu"
			aria-expanded="false"
			aria-controls="sidebar"
			type="button">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="1.5"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="lucide lucide-menu-icon lucide-menu w-full h-full">
				<path d="M4 12h16" />
				<path d="M4 18h16" />
				<path d="M4 6h16" />
			</svg>
		</button>

		<!-- Page Title / Application Name -->
		<div class="text-center text-lg" role="heading" aria-level="1">
			<span class="hidden md:inline-block">Book Inventory</span>
			<span class="md:hidden"><%= title %></span>
		</div>

		<!-- Search Form -->
		<div class="w-72 px-6 ml-auto hidden md:block">
			<form class="relative" role="search" aria-label="Search books">
				<label for="desktop-search" class="sr-only">Search books</label>

				<div
					class="size-6 absolute top-1/2 -translate-y-1/2 left-2 text-zinc-400"
					aria-hidden="true">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="1.5"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="lucide lucide-search-icon lucide-search w-full h-full">
						<path d="m21 21-4.34-4.34" />
						<circle cx="11" cy="11" r="8" />
					</svg>
				</div>

				<input
					id="desktop-search"
					type="search"
					name="q"
					data-device="desktop"
					aria-label="Search books"
					autocomplete="off"
					spellcheck="false"
					class="border border-zinc-300 pl-10 pr-2 py-[6px] w-full rounded-md outline-none hidden md:block focus-within:bg-white"
					placeholder="Search books, authors..."
					aria-describedby="search-help" />

				<!-- Hidden help text for screen reader -->
				<div id="search-help" class="sr-only">
					Search across books, authors, and genres. Press Enter to search or
					Escape to clear.
				</div>
			</form>
		</div>

		<!-- Add new item button -->
		<a
			href="/books/create?from=<%= currentPath %>"
			class="size-6 text-blue-500 rounded-md border-none"
			aria-label="Add new book"
			title="Add new book">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="1.5"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="lucide lucide-plus-icon lucide-plus w-full h-full">
				<path d="M5 12h14" />
				<path d="M12 5v14" />
			</svg>
		</a>
	</div>
</header>
