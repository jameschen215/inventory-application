<header
  class="flex flex-col gap-2 px-6 border-b border-zinc-200 fixed top-0 left-0 md:left-18 lg:left-64 w-full md:w-[calc(100%-64px)] lg:w-[calc(100%-256px)] bg-white/50 backdrop-blur-sm z-20"
>
  <div class="flex items-center justify-between h-16">
    <!-- Mobile menu toggle button -->
    <button
      id="btn-menu"
      class="size-6 cursor-pointer text-zinc-700 md:hidden"
      aria-label="Toggle navigation menu"
      aria-expanded="false"
      aria-controls="sidebar"
      type="button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-menu-icon lucide-menu w-full h-full"
      >
        <path d="M4 12h16" />
        <path d="M4 18h16" />
        <path d="M4 6h16" />
      </svg>
    </button>

    <!-- Page Title / Application Name -->
    <h2 class="text-center text-lg text-zinc-950">
      <span class="hidden md:inline-block">Book Inventory</span>
      <span class="md:hidden"><%= title %></span>
    </h2>

    <!-- Search button -->
    <button
      id="search-btn"
      type="button"
      class="flex items-center gap-1 md:px-3 md:py-1.5 rounded-full md:border border-zinc-200 text-zinc-700 text-sm cursor-pointer hover:text-zinc-950 hover:bg-zinc-50 transition-colors"
    >
      <div class="size-5" aria-hidden="true">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-search-icon lucide-search w-full h-auto"
        >
          <path d="m21 21-4.34-4.34" />
          <circle cx="11" cy="11" r="8" />
        </svg>
      </div>
      <span class="sr-only md:not-sr-only">Search</span>
    </button>
  </div>
</header>
