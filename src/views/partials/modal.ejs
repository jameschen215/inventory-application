<div
  id="modal"
  class="hidden absolute top-0 left-0 w-screen h-screen bg-zinc-950/20 backdrop-blur-xs z-30 items-start md:items-center justify-center p-5"
  aria-labelledby="search-title"
  aria-modal="true"
  role="dialog"
>
  <div
    class="w-full md:max-w-2xl min-h-[75%] max-h-full flex flex-col bg-white rounded-md overflow-clip"
  >
    <!-- Modal Header -->
    <div class="sr-only">
      <h1 id="search-title">Search Book Inventory</h1>
    </div>

    <!-- Search Form -->
    <form action="" class="relative border-b border-zinc-100">
      <div
        class="size-5 absolute top-1/2 -translate-y-1/2 left-4 text-zinc-400"
        aria-hidden="true"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-search-icon lucide-search w-full h-full"
        >
          <path d="m21 21-4.34-4.34" />
          <circle cx="11" cy="11" r="8" />
        </svg>
      </div>
      <input
        id="search"
        type="text"
        name="q"
        aria-label="Search input"
        autocomplete="off"
        spellcheck="false"
        class="pl-12 pr-2 py-4 w-full outline-none focus-within:bg-white placeholder:text-zinc-400 placeholder:font-light"
        placeholder="Search book inventory..."
      />
      <button
        id="cancel-btn"
        class="absolute inline-block top-1/2 -translate-y-1/2 right-4 px-1.5 py-0.5 rounded-md border border-zinc-200 text-xs text-zinc-400 cursor-pointer"
        aria-label="Close search"
      >
        esc
      </button>
    </form>

    <!-- Search Results -->
    <div
      id="results"
      class="flex-1 flex flex-col gap-5 items-center overflow-y-auto p-5"
      role="listbox"
    ></div>

    <!-- bottom -->
    <div
      aria-hidden="true"
      class="h-10 border-t border-zinc-100 flex items-center justify-end text-xs text-zinc-400 px-4"
    >
      <span>Simple Search</span>
    </div>
  </div>
</div>
